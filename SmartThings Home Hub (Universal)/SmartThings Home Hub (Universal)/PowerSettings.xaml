<Page
    x:Class="SmartThings_Home_Hub__Universal_.PowerSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartThings_Home_Hub__Universal_"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="-20,-20,0,0">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Click="RebootComputer" Width="175" Padding="15,10,15,0" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock Text="&#57805;" FontFamily="Segoe MDL2 Assets" TextAlignment="Center" FontSize="48" Margin="0,0,0,15" Foreground="#FF004261"/>
                    <TextBlock Text="Reset" TextAlignment="Center" Margin="0,0,0,5" Foreground="#FF595959"/>
                    <TextBlock Text="Restart the device" TextAlignment="Center" MaxLines="2" TextWrapping="Wrap" Foreground="#FFCCCCCC"/>
                </StackPanel>
            </Button>
            <Button Click="ShutdownComputer" Width="175" Padding="15,10,15,0" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock Text="&#59368;" FontFamily="Segoe MDL2 Assets" TextAlignment="Center" FontSize="48" Margin="0,0,0,15" Foreground="#FF004261"/>
                    <TextBlock Text="Shutdown" TextAlignment="Center" Margin="0,0,0,5" Foreground="#FF595959"/>
                    <TextBlock Text="Shutdown the device" TextAlignment="Center" MaxLines="2" TextWrapping="Wrap" Foreground="#FFCCCCCC"/>
                </StackPanel>
            </Button>
            <Button Click="LockComputer" Width="175" Padding="15,10,15,0" Background="{x:Null}" BorderBrush="{x:Null}" VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock Text="&#59182;" FontFamily="Segoe MDL2 Assets" TextAlignment="Center" FontSize="48" Margin="0,0,0,15" Foreground="#FF004261"/>
                    <TextBlock Text="Return to Lock" TextAlignment="Center" Margin="0,0,0,5" Foreground="#FF595959"/>
                    <TextBlock Text="Lock screen" TextAlignment="Center" MaxLines="2" TextWrapping="Wrap" Foreground="#FFCCCCCC"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
