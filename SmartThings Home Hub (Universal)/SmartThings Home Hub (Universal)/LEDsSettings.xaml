<Page
    x:Class="SmartThings_Home_Hub__Universal_.LEDsSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartThings_Home_Hub__Universal_"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="LEDs" FontSize="18.667" />

            <Line Stroke="#FFCFCFCF" X1="0" Y1="0" X2="1000" Y2="0" Margin="0,10,0,20" />

            <TextBlock Text="Turn on or off the device LED notifications." />
            <ToggleSwitch x:Name="toggleSwitch"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"/>
            <TextBlock Text="State:" />
            <StackPanel Orientation="Horizontal">
                <ToggleButton x:Name="WhiteLED" Content="White"  Margin="10" HorizontalAlignment="Center" />
                <ToggleButton x:Name="BlueLED" Content="Blue"  Margin="10" HorizontalAlignment="Center" />
                <ToggleButton x:Name="FadeLED" Content="Fade"  Margin="10" HorizontalAlignment="Center" IsChecked="True" />
                <ToggleButton x:Name="RainbowLED" Content="Rainbow"  Margin="10" HorizontalAlignment="Center" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
